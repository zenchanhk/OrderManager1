                                                        <GridView>
                                                            <GridViewColumn Header="Action" DisplayMemberBinding="{Binding Key}"/>
                                                            <GridViewColumn Header="Hold Duration" Width="80">
                                                                <GridViewColumn.CellTemplate>
                                                                    <DataTemplate>
                                                                        <controls:NumericUpDown Value="{Binding Value.HoldDuration}" 
                                                                                                MinValue="0" MaxValue="1800" Increment="1"
                                                                                                Width="60" />
                                                                    </DataTemplate>
                                                                </GridViewColumn.CellTemplate>
                                                            </GridViewColumn>
                                                            <GridViewColumn Header="Drop Points" Width="80">
                                                                <GridViewColumn.CellTemplate>
                                                                    <DataTemplate>
                                                                        <controls:NumericUpDown Value="{Binding Value.DropTick}" 
